syntax enable
colorscheme monokai
set number
"set statusline=%<%f\ %h%m%r%{kite#statusline()}%=%-14.(%l,%c%V%)\ %P
set laststatus=2  " always display the status line
filetype plugin on
set nocompatible
set shiftwidth=4
set tabstop=4
set hls
set nrformats=
set softtabstop=4 
set expandtab
set history=200
cnoremap <expr> %% getcmdtype() == ':' ? expand('%:h').'/' : '%%'

let mapleader=","
noremap \ ,

runtime macros/matchit.vim
runtime macros/surround.vim
set autoindent
set ignorecase
set incsearch

set smartindent
set smarttab
set showmatch
abbr Lunix Linux
abbr bang #!/bin/bash
